<section>
  <div id="alert"></div>

  <div class="spacing">

  </div>
  <div class="section">
    <div class="container productContainer">
      <div class="row">
        <div class="col-md-6">
          <img class="img-fluid" src="https://static.pingendo.com/cover-moon.svg" class="img-responsive">
        </div>
        <div class="col-md-6">
          <h1 id="name">{{data.[0].name}}</h1>
          <h3 id="price">{{data.[0].price}}</h3>
          <div>
            <div class="input-group qtyGroup">
              <button type="button" class="btn btn-danger btnMinus"  >
                <i class="fa fa-minus"></i>
              </button>
              <input class="qtyInput" type="number" value="1" min="1" max="{{data.[0].qty}}">
              <button type="button" class="btn btn-success btn-number btnPlus" >
                  <i  class="fa fa-plus"></i>
              </button>
            </div>
            <div class="colorGrp">
            <p style="margin: 5px;">Color</p>
          {{#each data.[0].color}}
          <button class="btn colorBtn" id="{{this}}" style="background-color: {{this}}"></button>
          {{/each}}
          </div>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
  <div class="section">
    <div class="container" style="padding-top: 10px">
      <div class="row inline">
        <div class="col-md-6">
          <a href="/catalog" class="btn btn-primary">Go back to catalog</a>
      </div>
      <div class="col-md-6">
        <a class="btn btn-primary addToCart" >Add to cart</a>
      </div>
    </div>
  </div>
</section>